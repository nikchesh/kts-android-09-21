<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/salutionFragment">
    <fragment
        tools:layout="@layout/fragment_salution"
        android:id="@+id/salutionFragment"
        android:name="ru.iu3.reddit.OnBoardingPage"
        android:label="SalutionFragment" >

        <action
            android:id="@+id/action_salutionFragment_to_loginFragment3"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/salutionFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_authorization"
        android:id="@+id/loginFragment"
        android:name="ru.iu3.reddit.LoginPage"
        android:label="LoginFragment" >

        <action
            android:id="@+id/action_loginFragment_to_mainPage"
            app:destination="@id/mainPage"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_main_page"
        android:id="@+id/mainPage"
        android:name="ru.iu3.reddit.MainPage"
        android:label="MainPage" />
</navigation>